{
    "compilerOptions": {
        "outDir": "dist",
        "sourceRoot": "src",
        "sourceMap": true,
        "rootDir": "src",
        "target": "es2020",
        "module": "NodeNext",
        "noImplicitAny": true,
        "baseUrl": ".",
        "paths": {
            "@/*":["src/*"],
            "@declaration/*":["./declaration/*"],
            "@utils":["src/utils/index.ts"],
            "@utils/*":["src/utils/*"]
        },
        "plugins": [ { "transform": "typescript-transform-paths" }]
    }
}